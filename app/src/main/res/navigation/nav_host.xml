<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.a15.fragments.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_changeContatcFragment"
            app:destination="@id/changeContatcFragment" />
        <action
            android:id="@+id/action_startFragment_to_addNewContactFragment"
            app:destination="@id/addNewContactFragment" />
    </fragment>
    <fragment
        android:id="@+id/changeContatcFragment"
        android:name="com.example.a15.fragments.ChangeContactFragment"
        android:label="fragment_change_contatc"
        tools:layout="@layout/fragment_change_contact" >
        <action
            android:id="@+id/action_changeContatcFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewContactFragment"
        android:name="com.example.a15.AddNewContactFragment"
        android:label="fragment_add_new_contact"
        tools:layout="@layout/fragment_add_new_contact" >
        <action
            android:id="@+id/action_addNewContactFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
</navigation>